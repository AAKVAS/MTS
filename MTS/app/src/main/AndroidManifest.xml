<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MTSApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MTS"
        tools:targetApi="31">
        <activity
            android:name=".main.presentation.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.presentation.view.ModulesActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_modules_main" />
        <activity
            android:name=".connectedEquipment.presentation.view.ConnectedEquipmentListActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:label="@string/title_connected_equipment" />
        <activity
            android:name=".connectedEquipment.presentation.view.ConnectedEquipmentItemActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_connected_equipment"
            android:exported="false" />
    </application>

</manifest>